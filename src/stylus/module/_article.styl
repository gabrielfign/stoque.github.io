.article-content
	margin $space
	lost-center 800px
	border-left 2px solid darken($gray-lighter,10%)
	padding $space-xs 15px
	transition 0.6s
	
	&:hover
		border-left 2px solid $primary-color
		

	> .subtitle
		margin-bottom 5px
		font-size rem(19px)
		color $primary-color
		font-weight normal
		
	.text
		font-size rem(14px)	
		line-height 1.5em
		

.top-button
	display block
	text-align center
	margin-bottom 10px
