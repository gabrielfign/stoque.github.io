// Social nav
// ==========================	
.social-nav
	text-align center
	// background blue
	
	> .item
		display inline-block
	
	> .item > .link
		display inline-block
		padding $space-xs
		
		&:hover .icon
			fill lighten($second-color, 50%)
			
// Nav pages
// =========================		
.toggle
	position absolute
	right 14px
	top 15px	
	
.nav-bar
	position fixed
	padding $space
	right -100%
	top 0
	width 80%
	height 100%
	text-align center
	background $second-color
	opacity 0
	transition 0.6s
	
	&.-visible
		right 0
		opacity .98
		
	> .close
		position absolute
		right 14px
		top 15px	
	
	> .item
		margin-bottom 5px
		border-bottom 1px solid rgba(255,255,255,0.10)
		
		&:first-child
			margin-top 50px
			
	> .item > .link
		display inline-block
		padding $space-sm $space	
		width 100%
		font-weight bold
		
