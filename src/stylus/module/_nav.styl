// Main nav
// ----------------------
.nav-toggle
	position absolute
	right $space
	top $space-sm

	+above($desktop)
		display none

	> .icon
		width 30px
		height 30px
		fill #fff

.main-nav
	+below($desktop)
		position fixed
		right -100%
		top 0
		width 70%
		height 100%
		background #fff
		transition all 0.4s ease-in
		opacity 1
		z-index 2

		&.is-active
			right 0
			transition all 0.4s ease-in
			opacity 1

	+above($desktop)
		width 250px
		text-align center

	> .nav-close
		float right
		padding $space-sm
		margin-right 6%

		+above($desktop)
			display none

		> .icon
			fill $text-color
			width 30px
			height 30px

	> .list

		+below($desktop)
			height 100%
			clear right
			z-index 3

	> .list > .item

		+below($desktop)
			text-align center
			margin-bottom 5px

		+above($desktop)
			display inline-block
			margin-right 20px

			&:last-child
				margin-right 0

	> .list > .item	 > .link
		display block
		text-transform lowercase
		font-weight 400
		text-decoration none
		padding $space-sm

		+below($desktop)
			font-size rem(20px)
			color $text-color

		+above($desktop)
			font-size rem(16px)
			color $text-color
			color #fff
			transition color 0.6s

			&:hover
				color $primary-color

.nav-overlay
	position fixed
	width 100%
	height 100%
	background transparent
	top 0
	right 0
	pointer-events none

	&.is-active
		pointer-events auto
		transition background 0.4s ease-in
		background rgba(0,0,0,.7)

	+above($desktop)
		display none
