.author-info
	float left
	width 100%
	text-align center

	> .link
		color $primary-color
		display inline-block
		
		> .avatar
			margin 0 auto
			width 100px
			height 100px
			border-radius 50%
		
		> .title
			font-size rem(18px)
			line-height 24px

		> .subtitle
			font-size rem(16px)
			text-transform lowercase	
	