.author-info
	margin-top $space-sm
	width 140px
	width 100%
	text-align center

	>.link > .avatar
		margin 0 auto
		width 130px
		height 130px
		border-radius 50%

		+desktop()
			height 160px
			width 160px
		
	> .title
		margin-top 5px
		font-size rem(22px)
		font-weight normal
		color darken($gray-dark,10%)
		
		+desktop()
			font-size rem(24px)

	> .description
		font-size rem(13px)
		text-align center
		color $gray-dark
		
		+desktop()
			font-size rem(14px)