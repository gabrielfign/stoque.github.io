.author-info
	margin-top $space-sm
	width 100%
	text-align center

	> .link
		display inline-block
		text-transform lowercase
		
		> .avatar
			margin 0 auto
			width 100px
			height 100px
			border-radius 40%
		
		> .title
			font-size rem(20px)
			color darken($gray-dark,10%)
			

		> .subtitle
			font-size rem(14px)
			color $second-color