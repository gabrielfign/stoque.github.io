.author-info
	margin-top $space-sm
	width 100%
	text-align center

	> .link
		color $text-color
		display inline-block
		
		> .avatar
			margin 0 auto
			width 100px
			height 100px
			border-radius 35%
		
		> .title
			font-size rem(20px)
			color $primary-color
			line-height 24px

		> .subtitle
			font-size rem(16px)
			text-transform lowercase	
	