.author-info
	margin-top $space-sm
	width 140px
	margin -50px auto
	text-align center

	> .link
		display inline-block
		text-transform lowercase
		
		> .avatar
			margin 0 auto
			width 100px
			height 100px
			border-radius 40%
		
		> .title
			font-size rem(21px)
			color darken($gray-dark,10%)
			
		> .subtitle
			font-size rem(16px)
			color $second-color