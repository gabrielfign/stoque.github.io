*,
*:after,
*:before
	box-sizing border-box
	margin 0
	padding 0

html
	height 100%

body
	background $body-color
	color $text-color
	font-family 'Open Sans', sans-serif
	min-height 100%
	display flex
	flex-direction column

h1
	margin 0
	
ul, li
	list-style none	
	
img
	max-width 100%	
	
figure
	margin 0
	padding 0	
	
a
	color $primary-color
	text-decoration none