*,
*:after,
*:before
	box-sizing border-box
	margin 0
	padding 0

body
	background $body-color
	color $text-color
	font-family 'Open Sans', sans-serif

h1
	padding 0
	margin 0

li,ul,ol
	list-style none
	
a
	text-decoration none
	color $link-color
	
	&:hover
		text-decoration underline
	
main
	padding 0 20px